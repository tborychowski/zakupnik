@import '_lib'

#income
	h2
		bg body-bg; position relative; z 9;
	.btn-split
	.btn-del
	.btn-reset
		color rgba(#fff, 0.6); u 0; font 21; vertical-align baseline;
		margin-left 10px; transition color .3s ease-out;
		&:hover
			color #fff;
		&:active
			color #888;

.income-form
	position relative; z 9; bg body-bg;

	.subforms
		overflow-y auto;

	.form-row
		clear both; overflow hidden; padding 2 2 20;

		input
			float left;  margin-right 2

	.btn-add
		float right; b 1;

	.amount
		width 70; text-align right;

	.description
		width 180;

	.fa
		color #fff; u 0; padding 2 4; height 27;

	.btn-split
	.btn-del
		margin-left 5px;

.repeat-in
	size 40 19; padding 0 0 0 5; margin-left 3; border none;
