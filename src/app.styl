@import "font-awesome.min.css";
@import "../node_modules/pikaday/css/pikaday.css";

@import "_lib";
@import "reset";


#content
	pos top-height 0 0 menu-width; padding 10; bg body-bg; border-radius 10px 0 0 0;
	shadow -2 -2 3 #000 .4; overflow-y auto;

.section
	show 0; opacity 0; transition opacity .2s ease-out;

	&.visible
		show 2;

	&.active
		opacity 1;

