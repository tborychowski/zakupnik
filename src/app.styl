@import "../node_modules/font-awesome/css/font-awesome.min.css";
@import "../node_modules/pikaday/css/pikaday.css";

@import "_lib";
@import "reset";
@import "../node_modules/grid/src";


#content
	pos top-height 0 0 menu-width; padding 10 0 10 10; border-radius 10px 0 0 0; bg body-bg;
	shadow -2 -2 3 #000 .4; overflow-y auto;

.section
	show 0; opacity 0; transition opacity .2s ease-out; bg body-bg;

	&.visible
		show 2;

	&.active
		opacity 1;

