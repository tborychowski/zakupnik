@import '_lib'

#expenses
	.btn-split
	.btn-del
	.btn-reset
		color rgba(#fff, 0.6); u 0; font 21; vertical-align baseline;
		margin-left 10px; transition color .3s ease-out;
		&:hover
			color #fff;
		&:active
			color #888;

.expenses-table
	pos 0 0 0 500; bg rgba(#000, .4); shadow 2 0 3 #000 0.3 inset;

	.grid
		pos 10 10 10 15;

	.grid-body .amount
	.grid-footer .amount
		text-align right;

.expenses-form
	position relative; width 457; z 9;

	.subforms
		overflow-y auto;

	.form-row
		clear both; overflow hidden; padding 0 0 20;

	.btn-add
		float right; b 1;

	.category
		width 120;

	.amount
		width 70; text-align right; margin-left 5px;

	.description
		width 180; margin-left 5px;

	.fa
		color #fff; u 0; padding 2 4; height 27;

	.btn-split
	.btn-del
		margin-left 5px;


.preview
	position relative; width 480; margin 50 0 0; opacity 0.5; pointer-events none;

	.preview-table
		position relative; margin 10 0 0;
		.fa-sort
			show 0;
		.grid
			min-height 160px;

		.grid-body .amount
		.grid-footer .amount
			text-align right;
