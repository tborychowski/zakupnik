@import '_lib'


#calendar
	pos 0; height top-height; text-align center; padding 5 0 0;
	left calc(50% - 170px);
	right calc(50% - 170px);

	.date
		bg none; border none; width 180; padding 0; text-align center;
		color #fff; cursor default;
		font 20; margin-right 30;

		&:hover
			u 1;
	.btn
		show 1; u 0; color #888; padding 7 5; font 16/1; vertical-align top;
		transition color .2s;
		&:hover
			color #fff;
		&:active
			color #aaa;
	.btn-today
		padding-top 5;





.pika-single
	border 0;

	&
	.pika-button
	.pika-table th
		font 100 15px/1 'Open Sans', sans-serif;

.pika-table th
	padding 5 0 10;
	abbr
		cursor default;

.pika-label
	font 15/1; font-weight 400; padding 5 3 10

.pika-button
	bg #fff;

.is-selected .pika-button
	border-radius 0; shadow none;

.pika-button:hover
	bg #ff8000; border-radius 0 !important;
