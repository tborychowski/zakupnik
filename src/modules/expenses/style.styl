.expenses-table
	pos auto 0 10 10; padding-right 10px; max-height 50%; overflow-y auto;

	table
		width 100%; border-collapse collapse;

		td
			border #ccc; padding 7;

		thead td
			bg rgba(#fff, .3);

		.active td
			bg rgba(#FFFFD4, 0.2);

	.amount
		text-align right;

	.actions
		text-align right; width 70; padding 0 5 0 0; padding-left 0;
		.btn
			float right; font 14; size 27; text-align center; u 0;
			margin-left 5px; padding-top 6px;
			color rgba(#fff, 0.3); transition color .3s ease-out;

			&:hover
				color #fff;
			&:active
				color #aaa;
