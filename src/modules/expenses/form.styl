@import '_lib'

calendar-width = 240px;

.expenses-form
	position relative; bg body-bg; z 99;
	.form
		position relative;

	.form-calendar
		pos 0 auto 0 0; size calendar-width 224px; bg #fff;

	.form-row
		clear both; overflow hidden; padding 0 0 20;
		margin-left (calendar-width + 10px);

	.btn-add
		margin-left 542px; b 1;

	.category
		width 200;

	.description
		width 200; margin-left 10px;

	.amount
		width 100; text-align right; margin-left 10px;

	.btn-split
	.btn-del
		margin-left 10px;





.pika-single
	border 0;

	.pika-title
		padding-top 3px;

	.pika-lendar
		margin 0;

	&, .pika-button, .pika-table th
		font 100 15px/1 'Open Sans', sans-serif;

	.pika-table th
		padding 5 0 10;
		abbr
			cursor default;

	.pika-label
		font 15/1; font-weight 400; padding 5 3 10

	.is-selected .pika-button
		border-radius 0; shadow none;

	.pika-button:hover
		bg #ff8000; border-radius 0 !important;
